@model Auth
@{
    ViewData["Title"] = "Tela de Login do Usuario";
}



@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { autocomplete = "off" }))
{
    
    <div class="container-fluid-eng-soft row m-3 justify-content-center">
        <img src="~/logouel.jpg" width="695" height="198"/>
    </div>

    <div class="row justify-content-center mg-5">
        <label class="text-login justify-content-center">Sistema de Ensalamento</label>
    </div>


    <div class="row justify-content-center mg-5 form-floating mb-3">
        @Html.TextBoxFor(x => x.Login, new {@placeholder = "Chapa / Matrícula", @class = "inputs-login"})
    </div>
    
    <div class="row justify-content-center mg-5 form-floating">
        @Html.TextBoxFor(x => x.Password, new {@placeholder = "Senha", @class = "inputs-login", type="password"})

    </div>

    <div class="row justify-content-center mg-5">
        
        <button class="btn button-users link-type-user" type="submit">Entrar</button>
    </div>

    <div class="row justify-content-center mg-5">
        @if (!string.IsNullOrEmpty(ViewBag.Erro))
        {
            <h4>
                @ViewBag.Erro.ToString()
            </h4>   
        }
    </div>

}